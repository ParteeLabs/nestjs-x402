{
  "compilerOptions": {
    "outDir": "dist/esm",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "declarationMap": true,
    "strictNullChecks": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "examples",
  ]
}